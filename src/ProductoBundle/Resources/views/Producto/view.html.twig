
{% extends 'base.html.twig' %}

{% block body %}	
	<a href="{{path('Product_list')}}" class="button alert">Volver al listado</a>	  
	<article class="grid-container mb-4">
		<div class="grid-x grid-margin-x">
			<div class="medium-6 cell">
				<img class="thumbnail" src="https://placehold.it/650x350">
				<div class="grid-x grid-padding-x small-up-4">
					<div class="cell">
						<img src="https://placehold.it/250x200">
					</div>
					<div class="cell">
						<img src="https://placehold.it/250x200">
				    </div>
				    <div class="cell">
				        <img src="https://placehold.it/250x200">
				    </div>
				    <div class="cell">
		                <img src="https://placehold.it/250x200">
		            </div>
		        </div>
		   </div>
		   <div class="medium-6 large-5 cell large-offset-1">
				<h3>{{producto.name}}</h3>
				<p>Price: $ {{producto.price}}</p>
				<p>Stock:{{producto.stock}}</p>

		<div class="grid-x">

		<div class="small-3 cell">
		<label for="middle-label" class="middle">Quantity</label>
		</div>
		   <form id="addToCart" action="{{path('Product_add_cart')}}" method="POST">

		<div class="small-9 cell">
		<input type="text" name="quantity" id="middle-label" placeholder="One fish two fish">
		</div>
		</div>
		
		<input type="hidden" name="id" value="{{producto.id}}" method="POST">
		<button type="submit" class="button large expanded"  id="addToCart" > Agregar al carrito </button>
		</form>
		<div class="small secondary expanded button-group">
		<a class="button">Facebook</a>
		<a class="button">Twitter</a>
		<a class="button">Yo</a>
		</div>
		</div>
		</div>

</article>
<script>
  $(document).ready(function(){

    $('#addToCart').on('submit', function(e){
      e.preventDefault();
      alert('enviar peticion XHR al carrito');
    });
  });
  </script>
{% endblock %}